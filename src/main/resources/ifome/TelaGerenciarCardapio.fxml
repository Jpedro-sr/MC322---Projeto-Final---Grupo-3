<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="640.0" prefWidth="360.0" 
      style="-fx-background-color: #f4f4f4;" 
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ifome.controller.TelaGerenciarCardapioController">

    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <padding>
            <Insets bottom="15" top="15" />
        </padding>
        <Label text="Meu CardÃ¡pio" textFill="#ea1d2c">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label text="Adicione ou edite seus produtos" textFill="#777">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </VBox>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: #f4f4f4;" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="containerProdutos" spacing="15.0" alignment="TOP_CENTER">
                <padding>
                    <Insets bottom="20" left="15" right="15" top="15" />
                </padding>
            </VBox>
        </content>
    </ScrollPane>

    <VBox spacing="10.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 0, -2, 0, 0);">
        <padding>
            <Insets bottom="15" left="20" right="20" top="15" />
        </padding>
        
        <Button text="Adicionar Novo Produto" maxWidth="Infinity" prefHeight="50.0" 
                style="-fx-background-color: #ea1d2c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" 
                onAction="#adicionarProduto">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Button text="Voltar ao Menu" maxWidth="Infinity" 
                style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand; -fx-font-weight: bold;" 
                onAction="#voltar" />
    </VBox>

</VBox>