<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
      prefHeight="640.0" prefWidth="360.0" spacing="20.0" 
      style="-fx-background-color: #f4f4f4;" 
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ifome.controller.LoginController">
   
   <padding>
      <Insets bottom="40.0" left="30.0" right="30.0" top="40.0" />
   </padding>

   <Label text="iFome" textFill="#ea1d2c">
      <font>
         <Font name="System Bold" size="48.0" />
      </font>
      <VBox.margin>
         <Insets bottom="40.0" />
      </VBox.margin>
   </Label>

   <VBox spacing="15.0">
      <children>
         <Label text="Acesse sua conta" textFill="#717171">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         
         <TextField fx:id="campoEmail" prefHeight="45.0" promptText="E-mail" 
                    style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5;" />
         
         <PasswordField fx:id="campoSenha" prefHeight="45.0" promptText="Senha" 
                        style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5;" />
      </children>
   </VBox>

   <Button mnemonicParsing="false" onAction="#handleLogin" maxWidth="Infinity" prefHeight="50.0" 
        style="-fx-background-color: #ea1d2c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 16px;" 
        text="ENTRAR">
      <font>
         <Font size="16.0" />
      </font>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </Button>

   <Button text="NÃ£o tem conta? Cadastre-se" textFill="#ea1d2c" underline="true" 
           onAction="#irParaCadastro"
           style="-fx-background-color: transparent; -fx-cursor: hand;">
      <font>
         <Font size="12.0" />
      </font>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </Button>

</VBox>