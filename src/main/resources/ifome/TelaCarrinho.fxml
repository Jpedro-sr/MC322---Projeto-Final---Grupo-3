<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="640.0" prefWidth="360.0" 
      style="-fx-background-color: #f4f4f4;" 
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ifome.controller.TelaCarrinhoController">

    <!-- CABEÃ‡ALHO FIXO -->
    <VBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <padding>
            <Insets bottom="15" top="15" left="15" right="15" />
        </padding>
        
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button text="â†" onAction="#voltar" 
                    style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand; -fx-font-size: 18px; -fx-font-weight: bold;">
            </Button>
            <Label text="Meu Carrinho" textFill="#333">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </HBox>
        
        <Label fx:id="lblRestaurante" text="Restaurante" textFill="#666">
            <font>
                <Font size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="5" />
            </VBox.margin>
        </Label>
    </VBox>

    <!-- LISTA DE ITENS (ScrollPane) -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: #f4f4f4;" VBox.vgrow="ALWAYS">
        <content>
            <VBox spacing="15.0">
                <padding>
                    <Insets bottom="20" left="15" right="15" top="15" />
                </padding>
                
                <!-- Container de Itens -->
                <VBox fx:id="containerItens" spacing="10.0">
                </VBox>
                
                <!-- SeÃ§Ã£o de Cupom -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8;">
                    <Label text="ðŸŽ« Cupom de Desconto" textFill="#333">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="txtCupom" promptText="Digite o cÃ³digo do cupom" 
                                   HBox.hgrow="ALWAYS"
                                   style="-fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" />
                        <Button fx:id="btnAplicarCupom" text="Aplicar" onAction="#aplicarCupom"
                                style="-fx-background-color: #4cd137; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10 20;">
                        </Button>
                    </HBox>
                    
                    <Label fx:id="lblCupomStatus" text="" textFill="#4cd137" visible="false">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                </VBox>
                
                <!-- Resumo de Valores -->
                <VBox spacing="8" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8;">
                    <Label text="ðŸ’° Resumo" textFill="#333">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Subtotal" textFill="#666">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblSubtotal" text="R$ 0,00" textFill="#333">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </HBox>
                    
                    <HBox fx:id="boxDesconto" alignment="CENTER_LEFT" visible="false" managed="false">
                        <Label text="Desconto" textFill="#4cd137">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblDesconto" text="- R$ 0,00" textFill="#4cd137">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </HBox>
                    
                    <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0; -fx-border-width: 1 0 0 0; -fx-border-color: #e0e0e0;">
                        <VBox.margin>
                            <Insets top="5" />
                        </VBox.margin>
                        <Label text="Total" textFill="#333">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblTotal" text="R$ 0,00" textFill="#ea1d2c">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </HBox>
                </VBox>
                
                <!-- EspaÃ§o para o rodapÃ© -->
                <Region prefHeight="80" />
            </VBox>
        </content>
    </ScrollPane>

    <!-- RODAPÃ‰ FIXO - BotÃ£o Finalizar -->
    <HBox alignment="CENTER" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 8, 0, 0, -2);">
        <padding>
            <Insets bottom="15" top="15" left="15" right="15" />
        </padding>
        
        <Button fx:id="btnFinalizarPedido" text="Finalizar Pedido" maxWidth="Infinity" prefHeight="50.0" 
                onAction="#finalizarPedido" HBox.hgrow="ALWAYS"
                style="-fx-background-color: #4cd137; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 16px;">
        </Button>
    </HBox>

</VBox>