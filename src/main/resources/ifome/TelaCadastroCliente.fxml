<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" style="-fx-background-color: #f4f4f4;" 
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="ifome.controller.CadastroClienteController">
   
   <VBox alignment="TOP_CENTER" prefWidth="360.0" spacing="20.0" style="-fx-background-color: #f4f4f4;">
      
      <padding>
         <Insets bottom="40.0" left="30.0" right="30.0" top="40.0" />
      </padding>

      <!-- Cabeçalho -->
      <VBox alignment="CENTER_LEFT" spacing="5">
         <Button text="← Voltar" onAction="#voltar" 
                 style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand; -fx-font-size: 14px;">
         </Button>
         
         <Label text="Criar Conta - Cliente" textFill="#333">
            <font>
               <Font name="System Bold" size="28.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </Label>
         
         <Label text="Preencha seus dados abaixo" textFill="#717171">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
      </VBox>

      <!-- Formulário -->
      <VBox spacing="15.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         
         <VBox spacing="5">
            <Label text="Nome Completo" textFill="#333">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="campoNome" prefHeight="45.0" promptText="Digite seu nome completo" 
                       style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" />
         </VBox>
         
         <VBox spacing="5">
            <Label text="E-mail" textFill="#333">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="campoEmail" prefHeight="45.0" promptText="seu@email.com" 
                       style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" />
         </VBox>
         
         <VBox spacing="5">
            <Label text="Telefone" textFill="#333">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="campoTelefone" prefHeight="45.0" promptText="(00) 00000-0000" 
                       style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" />
         </VBox>
         
         <VBox spacing="5">
            <Label text="Senha" textFill="#333">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <PasswordField fx:id="campoSenha" prefHeight="45.0" promptText="Digite sua senha" 
                           style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" />
         </VBox>
         
         <VBox spacing="5">
            <Label text="Confirmar Senha" textFill="#333">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <PasswordField fx:id="campoConfirmarSenha" prefHeight="45.0" promptText="Digite a senha novamente" 
                           style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" />
         </VBox>
      </VBox>

      <!-- Botão Cadastrar -->
      <Button mnemonicParsing="false" onAction="#handleCadastro" prefHeight="50.0" maxWidth="Infinity" 
              style="-fx-background-color: #ea1d2c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" 
              text="CRIAR CONTA">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>

      <!-- Link para Login -->
      <Label text="Já tem conta? Faça login" textFill="#ea1d2c" underline="true" onMouseClicked="#irParaLogin" 
             style="-fx-cursor: hand;">
         <font>
            <Font size="12.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>

   </VBox>
</ScrollPane>